<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("index.title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("index.categories"), categories_path %></li>
        <li><%= link_to t("index.home"), static_pages_home_path %></li>
        <li><%= link_to t("index.help"), static_pages_help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("index.cart"), carts_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= t "index.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("index.order"), orders_path %></li>
              <li class="divider"></li>
              <li><%= link_to t("index.logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
          <% if current_user.admin? %>
          <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
            <%= t "index.admin" %>
            <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t("index.order"), admin_orders_path %></li>
          </ul>
        </li>
        <% end %>
        <% else %>
          <li><%= link_to t("index.login"), login_path %></li>
        <% end %>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
            <%= t "index.language" %>
            <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t("index.en"), locale: :en %></li>
            <li><%= link_to t("index.vi"), locale: :vi %></li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
